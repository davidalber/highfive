#cloud-config

ssh_authorized_keys:
  - ssh-rsa  alber.david@gmail.com

# Upgrade apt and install packages.
package_update: true
packages:
  - apache2
  - mosh
  - python
  - python-pip

runcmd:
  - 'pip install virtualenv'
  - 'su - ubuntu -c "cd ~ && virtualenv awsclienv && awsclienv/bin/pip install awscli"'
  # Set up deployment directory
  - [ mkdir, /highfive ]
  - [ chown, "ubuntu:ubuntu", /highfive ]
  # Set up deployment script and do initial deployment
  - 'su - ubuntu -c "cd ~ && wget https://raw.githubusercontent.com/rust-lang-nursery/highfive/master/deployment/deploy && chmod 755 deploy && ./deploy master"'
  # Apache configuration
  - [ a2enmod, cgi ]
  - [ rm, /etc/apache2/conf-enabled/serve-cgi-bin.conf ]
  - 'rm /etc/apache2/sites-enabled/*'
  - [ ln, -s, /etc/apache2/conf-available/highfive.conf, /etc/apache2/conf-enabled ]
  - [ systemctl, restart, --no-block, apache2 ]
